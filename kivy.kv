<Calc>:
    id: calc
    display: input
    rows: 6
    padding: 100
    spacing: 15



    BoxLayout:
        TextInput:
            id: input
            font_size: 45
            multiline: False

    BoxLayout:
        spacing: 10
        Button:
            text: "7"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "8"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "9"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "+"
            on_press: input.text += self.text
            font_size: 32

    BoxLayout:
        spacing: 10
        Button:
            text: "4"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "5"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "6"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "-"
            on_press: input.text += self.text
            font_size: 32

    BoxLayout:
        spacing: 10
        Button:
            text: "1"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "2"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "3"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "*"
            on_press: input.text += self.text
            font_size: 32

    BoxLayout:
        spacing: 10
        Button:
            text: "AC"
            on_press: input.text = ""
            font_size: 32
        Button:
            text: "0"
            on_press: input.text += self.text
            font_size: 32
        Button:
            text: "="
            on_press: calc.vyp(input.text)
            font_size: 32
        Button:
            text: "/"
            on_press: input.text += self.text
            font_size: 32